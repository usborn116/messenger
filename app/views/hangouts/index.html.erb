<h1>Hangouts#index</h1>
<p>Find me in app/views/hangouts/index.html.erb</p>
<div>
  <div id="message-display">
  <% @messages.each do |message| %>
  <article class="message">
    <div class="message-header">
      <%= message.user.email %>
    </div>
    <div class="message-body">
      <%= message.body %>
    </div>
  </article>
<% end %>
  </div>
  <div id="message-form">
    <%= form_with model: @message, data: {controller: :button, action: "turbo:submit-end->button#clear"}, local: false do |f| %>
        <div class="field has-addons">
        <div class="control inp" data-button-target="txtfield">
        <%= f.text_field :body, id: 'message-input', class: 'input' %>
        </div>
        <div class="control">
        <%= f.submit 'Send Message', class: 'button is-primary' %>
        </div>
        </div>
    <% end %>
  </div>
</div>